<?xml version="1.0" encoding="utf-8"?>
<xie.com.netmdeiaplayer.view.titlebar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55sp"
    android:orientation="horizontal"
    >

    <ImageView
        android:src="@mipmap/bg_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:text="全网搜索"
        android:drawablePadding="15dp"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/selector_search"
        android:background="@drawable/tv_search_bg_selector"
        android:textColor="@drawable/tv_search_tv_selector"
        />
    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10sp"
        >
        <TextView
            android:id="@+id/tv_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_listitem_about"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shap_pot"
            android:layout_alignRight="@id/tv_game"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_recode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_listitem_favorite"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        />
</xie.com.netmdeiaplayer.view.titlebar>